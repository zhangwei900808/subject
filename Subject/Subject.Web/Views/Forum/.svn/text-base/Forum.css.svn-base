#content-forum
{
    width: 980px;
    min-height: 700px;
    margin: 0 auto;
}
#forum-btn1 {
    width: 900px;
    margin:10px 3px;
    text-align: left;
    
}
#forum-content {
    width: 975px;
    margin: 0 auto;
}
.pagination {
  margin: 0;
}
.table tr
{
    height: 100%;
}
table thead {
     background-color: green;
    color: white;
    font-weight: bold;
}
.pagination > .active > a,
.pagination > .active > span,
.pagination > .active > a:hover,
.pagination > .active > span:hover,
.pagination > .active > a:focus,
.pagination > .active > span:focus {
  z-index: 2;
  color: #ffffff;
  cursor: default;
  background-color: green;
  border-color: green;
}
a {
  color: green;
  text-decoration: none;
}
table tbody td:first-child {
    text-align: left;
}
.table tbody tr td + td {
    text-align: center;
}
/*table tbody tr:nth-child(even) {
    background-color: #333;
}*/
.table tbody tr:hover {
    background-color: #eee;
}
#content-page {
    float: right;
    margin-right:3px;
}
.panel {
  margin-bottom: 10px;
}
.pointer-cursor
{
    cursor: pointer;
}
